FROM localhost/umec_container

RUN zypper --non-interactive install systemd openssl which sudo
RUN useradd --create-home --password $(openssl passwd -1 umec) umec
RUN passwd 
RUN echo "127.0.0.1" >> /etc/hosts
RUN curl -sfL https://get.k3s.io -o install_k3s.sh
RUN chmod u+x install_k3s.sh

CMD systemd
